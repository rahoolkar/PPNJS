<% layout('/layouts/boilerplate') -%>
<%- include("../layouts/uibar.ejs"); %>
<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of listings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src=<%= listing.image.url %> class="card-img-top" alt="listing-image" style="height:20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p><b><%= listing.title %></b></p>
                        <!-- <p class="card-text"><%= listing.description %></p> -->
                        <p>&#8377;<%= listing.price.toLocaleString('en-IN') %> / night <b class="tax-info">&nbsp;+<%= Math.floor(Math.random()*20)+1 %> GST</b></p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>



